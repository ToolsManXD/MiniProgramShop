page {
  padding-bottom: 90rpx;
}
.get_address .addr_btn {
  padding: 20rpx;
}
.get_address .addr_btn button {
  width: 60%;
}
.info_row {
  display: flex;
  padding: 20rpx;
  font-size: 30rpx;
}
.info_row .user_info {
  flex: 5;
}
.info_row .user_phone {
  flex: 3;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: #e22d2d;
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart_content .cart_main .empty_cart {
  transform: translate(50%, 50%);
  width: 50%;
  height: 50%;
}
.cart_content .cart_main .cart_item {
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
}
.cart_content .cart_main .cart_item .check_box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.cart_content .cart_main .cart_item .img_box {
  flex: 2;
}
.cart_content .cart_main .cart_item .img_box image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 4;
}
.cart_content .cart_main .cart_item .cart_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_wrap .goods_price {
  font-size: 34rpx;
  color: #e22d2d;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_wrap .cart_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart_content .cart_main .cart_item .cart_info .goods_price_wrap .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  border-top: 1px solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0%;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.footer_tool .all_checkbox {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool .total_price_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 4;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: #e22d2d;
  font-size: 32rpx;
}
.footer_tool .order_pay_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  background-color: #e22d2d;
  color: #fff;
  font-weight: 600;
  flex: 3;
}
